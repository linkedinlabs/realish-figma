{
  "name": "linkedin-design-tools-figma",
  "version": "1.0.0",
  "description": "Shared utilities for building Figma Plugins.",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "npm run lint:js",
    "lint:eslint": "eslint . --ext .js,.tsx,.ts",
    "lint:js": "npm run lint:eslint",
    "lint:staged": "lint-staged",
    "test": "npm run build && mocha --reporter spec",
    "test:only": "mocha --reporter spec"
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts}": "eslint"
  },
  "pre-commit": "lint:staged",
  "keywords": [
    "figma"
  ],
  "author": "Design Productivity <design@linkedin.com>",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@figma/plugin-typings": "^1.26.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^8.2.3",
    "@types/node": "^16.3.2",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.4.3",
    "lint-staged": "^11.0.1",
    "mocha": "^9.0.2",
    "pre-commit": "^1.2.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "chai": "^4.3.4",
    "sinon": "^11.1.1"
  }
}
